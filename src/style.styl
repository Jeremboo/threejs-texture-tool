main = #084C61;
darken = darken(main, 35);

.ThreejsTextureTool {
  list-style: none;
  margin: 0;
  padding: 0;
  font-family: Century Gothic,CenturyGothic,AppleGothic,sans-serif;

  &-wrapper {
    position: fixed;
    top: 5vh;
    bottom: 5vh;
    right: 0;
    max-height: 90vh;    overflow-x: visible;
    overflow-y: auto;
    padding: 8px;
  }
}

.TextureTool {
  display: flex;
  justify-content: flex-end;
  margin-top: 8px;

  &-hidden {
    display: none;
  }

  &-canvas {
    position: absolute;
  }

  &-window {
    position: relative;
    pointer-events: auto;
  }

  &-button, &-close {
    white-space:nowrap;
    text-overflow: ellipsis;
    border: none;
    font: inherit;
    line-height: normal;
    outline: none;
  }

  &-button {
    max-width: 150px;
    padding: 6px 16px;
    border-radius: 2px;
    background-color: main;
    color: white;
    overflow: hidden;
    font-size: 0.8em;
    transition: 0.2s;
    cursor: pointer;
    transform: translateX(0);

    &:hover {
      max-width: 999px;
      background-color: darken;
      transform: translateX(-8px);
      padding: 6px 32px;
    }
  }

  &-close {
    position: absolute;
    width: 20px;
    height: 20px;
    top: 5px;
    right: 5px;
    background-color: main;
    color: white;
    border-radius: 2px
    transition: 0.4s;

    &:after {
      content: ('x');
      position: absolute;
      top: 46%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    &:hover {
      width: 22px;
      height: 22px;
      top: 4px;
      right: 4px;
      cursor: pointer;
      padding: 4px 8px;
      background-color: darken;
    }
  }
}
