main = #084C61;
darken = darken(main, 35);

.ThreejsTextureTool {

  &-wrapper {
    position: fixed;
    top: 5vh;
    bottom: 5vh;
    left: 0;
    max-height: 90vh;
    margin: 0;
    padding: 8px;
    overflow-x: none;
    overflow-y: auto;
    list-style: none;
    font-family: Century Gothic,CenturyGothic,AppleGothic,sans-serif;
  }

  &_hidden {
    display: none;
  }
}

.TextureTool {
  display: flex;
  justify-content: flex-start;
  margin-top: 8px;

  &-hidden {
    display: none;
  }

  &-canvas {
    position: absolute;
  }

  &-window {
    position: relative;
    pointer-events: auto;
    background-color: rgba(0, 0, 0, 0.5);
    transition: 0.2s;

    &:hover {
      background-color: rgba(0, 0, 0, 1);
    }

    img {
      max-width: 200px;
      width: 100%;
    }
    canvas {
      cursor: pointer;
    }

    &.drag:after {
      content: '+';
      display: flex;
      justify-content: center;
      align-items: center;
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      z-index: 1;
      background-color: rgba(0, 0, 0, 0.5);
      color: white;
      font-size: 3em;
    }
  }

  &-button, &-close {
    white-space:nowrap;
    text-overflow: ellipsis;
    border: none;
    font: inherit;
    line-height: normal;
    outline: none;
  }

  &-button {
    max-width: 150px;
    padding: 6px 16px;
    border-radius: 2px;
    background-color: main;
    color: white;
    overflow: hidden;
    font-size: 0.8em;
    transition: 0.2s;
    cursor: pointer;
    transform: translateX(0);

    &:hover {
      max-width: 999px;
      background-color: darken;
      // transform: translateX(8px);
      padding: 6px 32px;
    }
  }

  &-close {
    position: absolute;
    width: 20px;
    height: 20px;
    top: 5px;
    left: 5px;
    background-color: main;
    color: white;
    border-radius: 2px
    transition: 0.4s;

    &:after {
      content: ('x');
      position: absolute;
      top: 46%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    &:hover {
      width: 22px;
      height: 22px;
      top: 4px;
      right: 4px;
      cursor: pointer;
      padding: 4px 8px;
      background-color: darken;
    }
  }
}
